<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.PatientRegistration"
    android:background="@drawable/hms2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_margin="50dp"
        android:gravity="center_horizontal"
        />



    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:hint="Name"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:hint="Email"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:hint="Age"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        />

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:hint="Gender"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_search_24"
        />

    <EditText
        android:id="@+id/bloodgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:hint="Blood Group"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_bloodtype_24"
        />



    <EditText
        android:id="@+id/newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bloodgroup"
        android:hint="Enter Password"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_info_24"

        />

    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpassword"
        android:hint="Confirm Password"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:drawablePadding="18dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_info_24"


        android:inputType="textPassword"
        android:paddingRight="10dp"
        android:longClickable="false"



        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@id/confirmpassword"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"

        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="SIGN UP"
        android:textSize="20dp"
        app:backgroundTint="#3F51B5" />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="Already have an account ? Log in"
        android:textStyle="bold"/>

</RelativeLayout>